<h1>Tasking</h1>
  <% @tasks.each do |task| %>
    <input type="checkbox" name="completed" id="<%=task.id%>">
    <label for="<%=task.id%>">
      <%= link_to task.title, task_path(task.id) %>
    </label>
    <div class="container">
    <%= link_to "Delete", task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }, style: 'color: red;'%>
    </div>
  <% end %>

<%= link_to "Add a task", new_path %>
